{
  "_comment" : "Simple Packer Template using Amazon Linux 2017.03",
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-2",
    "source_ami": "ami-09e7cafd5240be236",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "aws_test-{{user `Build`}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 60",
      "sudo wget https://github.com/ -O /var/www/html/",
    ]
  }]
}